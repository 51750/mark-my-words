{
  "manifest_version": 3,
  "name": "Mark My Words - Highlighting and translating words on any page.",
  "version": "1.3.1",
  "description": "Select any text to translate and save it.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "main/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main/content.js"
      ],
      "css": [
        "main/styles.css"
      ]
    }
  ]
}