{
  "manifest_version": 3,
  "name": "Mark My Words",
  "version": "1.0",
  "description": "Learn English by highlighting and translating words on any page.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}